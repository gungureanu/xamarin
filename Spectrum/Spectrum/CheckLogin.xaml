<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Spectrum.CheckLogin">
    <ContentPage.Content>
        <StackLayout>
            <Grid x:Name="grdMain" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="3"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Margin="20" x:Name="imgLogo" HeightRequest="300" WidthRequest="300" Source="Spectrum_kha_circle_logo" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"></Image>
                <StackLayout Background="Red" HeightRequest="3" WidthRequest="50" x:Name="stkProgressBar" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="1" Margin="10,0,10,0"></StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 